<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
   <div class="col-8 offset-1" >
    <br><br>
     <h3>create a new listings</h3>
     <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="from-lable">Title</label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
            <div class="valid-feedback">Looks good &#128077;</div>
            <div class="invalid-feedback">Please enter valid Title &#10060;</div>
        </div>
        
        <br>
        <div class="mb-3">
            <label for="description" class="from-lable">Description</label>
            <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter valid Description &#10060;</div>
            <div class="valid-feedback">Looks good &#128077;</div>
        </div>
        
        <br>
        <!-- <div class="mb-3">
            <label for="image" class="from-lable" >Image Link</label>
            <input name="listing[image]" placeholder="enter image URL" type="text" class="form-control">
        </div> -->

        <div class="mb-3">
          <label for="image" class="from-lable" >Uplode Image</label>
          <input name="listing[image]" type="file" class="form-control">
          required
        </div>

        <br>
        <div class="row">
                  <div class="mb-3 col-md-4">
                    <label for="price" class="from-lable" >Price</label>
                    <input name="listing[price]" placeholder="enter price" class="form-control" required>
                    <div class="invalid-feedback">Please enter valid price &#10060;</div>
                    <div class="valid-feedback">Looks good &#128077;</div>
                 </div>
            
                 <br>
                  <div class="mb-3 col-md-8">
                    <label for="country" class="from-lable" >Country Name</label>
                    <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required >
                    <div class="invalid-feedback">Please enter valid country name &#10060;</div>
                    <div class="valid-feedback">Looks good &#128077;</div>
                  </div>
        </div>
        
        <br>
        <div class="mb-3">
            <label for="location" class="from-lable" >Location</label>
            <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter valid location name &#10060;</div>
            <div class="valid-feedback">Looks good &#128077;</div>
        </div>
        
        <br>
        <button class="btn btn-dark edit-btn">Add</button>
        <br><br>
      </form>
   </div>
</div>


