<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-1">
    <h3>EDIT THIS LISTINGS</h3> 
    <form method="POST" action="/listings/<%= listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="from-lable">Title</label>
            <input name="listing[title]" value="<%= listing.title %>"  type="text" class="form-control" required>
            <div class="valid-feedback">Looks good &#128077;</div>
            <div class="invalid-feedback">Please enter valid Title &#10060;</div>
        </div>
        <br>
        <br>
        <div class="mb-3">
            <label for="description" class="from-lable">Description</label>
            <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">Please enter valid Description &#10060;</div>
            <div class="valid-feedback">Looks good &#128077;</div>
        </div>
        <br>
        <br>
        <div class="mb-3 ">
            Original listing image
               <img src="<%= originalUrlImage %>"  class="card-img-top show-img" alt="listing_image"/>
        </div>
        <div class="mb-3">
            <label for="image" class="from-lable" >Upload New Image</label>
            <input name="listing[image]" type="file" class="form-control" >
        </div>
        <br>
        <br>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="from-lable" >Price</label>
                <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required>
                <div class="invalid-feedback">Please enter valid price &#10060;</div>
                <div class="valid-feedback">Looks good &#128077;</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="from-lable" >Country Name</label>
                <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter valid country name &#10060;</div>
                <div class="valid-feedback">Looks good &#128077;</div>
            </div>
        </div>
        <br>
        <br>
        <div class="mb-3">
            <label for="location" class="from-lable" >Location</label>
            <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter valid location name &#10060;</div>
            <div class="valid-feedback">Looks good &#128077;</div>
        </div>
        <br>
        <br>
        <button class="btn btn-dark add-btn">Add</button>
        <br>
        <br>
    </form>
</div>
</div>

